{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": true, // optional but recommended
    "esModuleInterop": true, // helpful for commonjs interop
    "skipLibCheck": true // speeds up compilation
  }
}
